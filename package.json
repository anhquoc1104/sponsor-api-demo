{
    "name": "sponsor-project",
    "version": "0.0.1",
    "description": "",
    "author": "",
    "private": true,
    "license": "UNLICENSED",
    "scripts": {
        "build": "yarn build:admin-service; yarn build:client-service; yarn build:publisher-service; yarn build:scheduler-service",
        "build:admin-service": "rimraf dist/apps/admin-service; nest build admin-service;",
        "build:client-service": "rimraf dist/apps/client-service; nest build client-service;",
        "build:publisher-service": "rimraf dist/apps/publisher-service; nest build publisher-service;",
        "build:scheduler-service": "rimraf dist/apps/scheduler-service; nest build scheduler-service;",
        "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
        "start": "NODE_ENV=local nest start --watch",
        "start:dev": "NODE_ENV=dev nest start --watch",
        "start:debug": "NODE_ENV=local nest start --debug --watch",
        "start:debug-dev": "NODE_ENV=dev nest start --debug --watch",
        "start:debug-prod": "NODE_ENV=prod nest start --debug --watch",
        "start:prod": "NODE_ENV=prod nest start --watch",
        "start:build": "NODE_ENV=local node dist/apps/admin-service/main",
        "start:build-dev": "NODE_ENV=dev node dist/apps/admin-service/main",
        "start:build-dev-admin": "NODE_ENV=dev node dist/apps/admin-service/main",
        "start:build-dev-client": "NODE_ENV=dev node dist/apps/client-service/main",
        "start:build-dev-publisher": "NODE_ENV=dev node dist/apps/publisher-service/main",
        "start:build-dev-scheduler": "NODE_ENV=dev node dist/apps/scheduler-service/main",
        "start:build-prod": "NODE_ENV=prod node build/apps/admin-service/main",
        "start:build-prod-admin": "NODE_ENV=prod node build/apps/admin-service/main",
        "start:build-prod-client": "NODE_ENV=prod node build/apps/client-service/main",
        "start:build-prod-publisher": "NODE_ENV=prod node build/apps/publisher-service/main",
        "start:build-prod-scheduler": "NODE_ENV=prod node build/apps/scheduler-service/main",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix --color",
        "test": "node --max-old-space-size=4096 node_modules/.bin/jest --coverage --runInBand",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./apps/client-service/test/jest-e2e.json"
    },
    "dependencies": {
        "@grpc/grpc-js": "^1.12.2",
        "@nestjs-modules/mailer": "^2.0.2",
        "@nestjs/axios": "^3.1.2",
        "@nestjs/bull": "^10.1.0",
        "@nestjs/cache-manager": "^2.3.0",
        "@nestjs/common": "^10.3.0",
        "@nestjs/config": "^3.2.0",
        "@nestjs/core": "^10.0.0",
        "@nestjs/event-emitter": "^2.0.3",
        "@nestjs/jwt": "^10.2.0",
        "@nestjs/microservices": "^10.3.0",
        "@nestjs/mongoose": "^10.0.2",
        "@nestjs/platform-express": "^10.0.0",
        "@nestjs/platform-socket.io": "^10.3.1",
        "@nestjs/schedule": "^4.0.0",
        "@nestjs/swagger": "^7.2.0",
        "@nestjs/websockets": "^10.4.8",
        "@sendgrid/mail": "^8.1.3",
        "@socket.io/redis-adapter": "^8.2.1",
        "@types/node-telegram-bot-api": "^0.64.6",
        "amqp-connection-manager": "^4.1.14",
        "amqplib": "^0.10.3",
        "axios": "^1.7.7",
        "bcrypt": "^5.1.1",
        "bull": "^4.16.4",
        "cache-manager": "^6.1.3",
        "cache-manager-redis-store": "^3.0.1",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.1",
        "compression": "^1.7.5",
        "dotenv": "^16.4.1",
        "express": "^4.21.1",
        "fs": "^0.0.1-security",
        "lodash": "^4.17.21",
        "moment": "^2.30.1",
        "mongoose": "^8.0.4",
        "mongoose-unique-validator": "^5.0.1",
        "nestjs-i18n": "^8.3.2",
        "node-telegram-bot-api": "^0.63.0",
        "nodemailer": "^6.9.15",
        "nodemailer-mailgun-transport": "^2.1.5",
        "redis": "^4.6.12",
        "reflect-metadata": "^0.1.13",
        "rxjs": "^7.8.1",
        "socket.io": "^4.8.1",
        "socket.io-client": "^4.8.1"
    },
    "devDependencies": {
        "@nestjs/cli": "^10.0.0",
        "@nestjs/schematics": "^10.0.0",
        "@nestjs/testing": "^10.0.0",
        "@types/amqplib": "^0.10.4",
        "@types/bcrypt": "^5.0.2",
        "@types/express": "^4.17.17",
        "@types/jest": "^29.5.2",
        "@types/multer": "^1.4.11",
        "@types/node": "^20.3.1",
        "@types/supertest": "^6.0.0",
        "@typescript-eslint/eslint-plugin": "^6.0.0",
        "@typescript-eslint/parser": "^6.0.0",
        "eslint": "^8.42.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-plugin-prettier": "^5.0.0",
        "eslint-plugin-security": "^2.1.0",
        "jest": "^29.5.0",
        "pre-commit": "^1.2.2",
        "prettier": "^3.0.0",
        "source-map-support": "^0.5.21",
        "supertest": "^6.3.3",
        "ts-jest": "^29.1.0",
        "ts-loader": "^9.4.3",
        "ts-node": "^10.9.1",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.1.3"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "./",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node",
        "roots": [
            "<rootDir>/apps/",
            "<rootDir>/libs/"
        ]
    },
    "pre-commit": [
        "format"
    ]
}
